{
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/api/*",
        "function": "api"
      }
    ],
    "headers": [
      {
        "source": "**/*.*",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Content-Security-Policy",
            "value": "script-src 'self'"
          },
          {
            "key": " Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          }
        ]
      }
    ]
  }
}
